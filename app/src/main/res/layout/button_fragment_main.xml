<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id = "@+id/black_button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Black"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="61dp" />
    <Button
        android:id = "@+id/blue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Blue"
        android:layout_alignTop="@+id/black_button"
        android:layout_toRightOf="@+id/black_button"
        android:layout_toEndOf="@+id/black_button" />
    <Button
        android:id="@+id/erase_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Erase"
        android:layout_below="@+id/blue_button"
        android:layout_alignRight="@+id/paint_screen_id"
        android:layout_alignEnd="@+id/paint_screen_id" />
</LinearLayout>